<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lcm.dao.business.IRoleDao" >
  <resultMap id="RoleMap" type="com.lcm.entity.pojo.Role" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="des" property="des" jdbcType="VARCHAR" />
    <result column="isDelete" property="isDelete" jdbcType="BIT" />
    <result column="createTime" property="createTime" jdbcType="TIMESTAMP" />
    <result column="modifyTime" property="modifyTime" jdbcType="TIMESTAMP" />
  </resultMap>
  
  <resultMap id="ResultOfInteger" type="java.lang.Integer">  
    <result column="budget" property="budget" jdbcType="INTEGER" />  
  </resultMap> 
  
  <select id="select" resultMap="RoleMap">
  	select * from t_role where isDelete=0 
  </select>
  
  <select id="countParam" resultMap="ResultOfInteger">
    select count(*) budget from t_role a where a.isDelete=0
    <if test="name != null">
  	and a.name like '%${name}%'
  	</if>
  </select>
  
  <select id="selectParam" resultMap="RoleMap">
  	select * from t_role a where a.isDelete=0
  	<if test="name != null">
  	and a.name like '%${name}%'
  	</if>
  	<if test="orderBy != null">
  	order by ${orderBy}
  	</if>
  	<if test="page != null">
  	limit #{page}, #{pageSize}
  	</if>
  </select>
  
   <select id="selectPk" resultMap="RoleMap" parameterType="java.lang.Long" >
    select 
    *
    from t_role
    where  isDelete=0
    and id = #{id}
  </select>
  
  <insert id="insert" parameterType="com.lcm.entity.pojo.Role" useGeneratedKeys="true" keyProperty="id">
    insert into t_role
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="name != null" >
        name,
      </if>
      <if test="des != null" >
        des,
      </if>
      isDelete,
      createTime,
      modifyTime
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id},
      </if>
      <if test="name != null" >
        #{name},
      </if>
      <if test="des != null" >
        #{des},
      </if>
      0,
      now(),
      now()
    </trim>
  </insert>
  
  <update id="update" parameterType="com.lcm.entity.pojo.Role" >
    update t_role
    <set >
      <if test="name != null" >
        name = #{name},
      </if>
      <if test="des != null" >
        des = #{des},
      </if>
      <if test="isDelete != null" >
        isDelete = #{isDelete},
      </if>
      modifyTime = now()
    </set>
    where id = #{id}
  </update>
</mapper>